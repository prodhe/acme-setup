#!/usr/bin/env rc

# Always isolate acme in a separate namespace. Plumbing outside of acme will not affect this instance.
NAMESPACE=`{9 mktemp -d}
9 plumber

TERM=dumb
SHELL=rc
PAGER='col -b'
GIT_EDITOR=editinacme
fn cd { builtin cd $1 && awd $sysname }

tabstop=4
font=/lib/font/bit/lucm/euro.9.font
lfont=/mnt/font/FiraCode-Regular/14a/font

exec $PLAN9/bin/acme -a -F $lfont $* &
